{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "declarationMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noErrorTruncation": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/app/components/*"],
      "@customizations/*": ["./src/app/customizations/*"]
    }
  },
  "include": ["./src/**/*"]
}
